<Window x:Class="WpfTestGround2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfTestGround2"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        xmlns:cb="clr-namespace:WpfTestGround2"
        mc:Ignorable="d" DataContext="{Binding RelativeSource={RelativeSource Mode=Self}}"
        xmlns:h="clr-namespace:HM.Wpf;assembly=HM.Wpf"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <ListBox ItemsSource="{Binding StringData}" Width="300" Background="AliceBlue" AllowDrop="True">
            <i:Interaction.Behaviors>
                <cb:DragSortInListBoxBehaviour ItemControlType="{x:Type ListBoxItem}"/>
            </i:Interaction.Behaviors>
            <ListBox.ItemTemplate>
                <DataTemplate DataType="{x:Type sys:String}">
                    <ListBoxItem>
                        <Label Content="{Binding}" d:Content="Test"/>
                    </ListBoxItem>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</Window>
